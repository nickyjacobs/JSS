# Database Configuratie
DATABASE_URL=sqlite:///phishing_simulator.db
SECRET_KEY=your-secret-key-here

# SMTP Email Configuratie
# Voor Gmail: gebruik een App Password (niet je normale wachtwoord)
# Ga naar: https://myaccount.google.com/apppasswords
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=jouw-email@gmail.com
SMTP_PASSWORD=jouw-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Andere SMTP providers:
# Outlook/Hotmail: smtp-mail.outlook.com:587
# Yahoo: smtp.mail.yahoo.com:587
# Custom SMTP: pas aan naar jouw provider

# Base URL voor tracking links (moet publiek toegankelijk zijn)
BASE_URL=http://localhost:5000

# Flask Configuratie
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
